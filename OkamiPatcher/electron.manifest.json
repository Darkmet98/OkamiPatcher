{
  "executable": "OkamiPatcher",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "OkamiPatcher",
  "author": "",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.OkamiPatcher.app",
    "productName": "OkamiPatcher",
    "copyright": "Copyright Â© 2020",
    "icon": "../../../icon.ico",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "win": {
      "target" : "portable"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}